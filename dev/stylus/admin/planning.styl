.fitplan-planning-item
  &.is-edited .fitplan-planning-item-inside
    opacity .5

  &:hover .fitplan-planning-item-overlay
    display flex 

.fitplan-planning-item-overlay
  position absolute
  display none
  z-index 10
  top 3px
  left 3px
  right 3px
  bottom 1px

  justify-content stretch
  background rgba(0,0,0, .7)
  border-radius 4px

  a
    text-decoration none
    color white

.fitplan-planning-delete-item
  position absolute
  z-index 15
  top 6px
  right 8px
  font-size 18px
  line-height 1

.fitplan-planning-edit-item
  flex auto
  display flex
  align-items center
  justify-content center

  span
    display block

.fitplan-planning-item-template
  display none // IE11 -
