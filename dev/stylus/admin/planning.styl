// Add Workout to planning

.add-workout
  span
    margin 0 pad-xs 0 pad-s

    &:first-child
      margin-left 0

  select
    vertical-align baseline

  input[type="time"]
    border-radius 4px
    height 28px

  .button
    margin-left pad-m
    vertical-align bottom
    height 26px
    line-height 25px
    transform translateY(-2px)


// Planning

.fitplan-planning
  display flex
  width 100%

.fitplan-planning-day
  display none
  flex 1
  width 0

  &:not(:first-child)
    border-left 1px solid wp-neutral

  &.is-shown
    display block

.fitplan-planning-title
  text-align center
  border-bottom 1px solid wp-neutral
  padding pad-s
  text-transform capitalize

.fitplan-planning-morning
  position relative
  overflow hidden
  border-bottom 15px solid #f5f5f5
  height 0
  transition height .5s ease-in-out

.fitplan-planning-afternoon
  position relative
  overflow hidden
  height 0
  transition height .5s ease-in-out

.fitplan-planning-item
  display flex
  flex-direction column
  position absolute
  z-index 1
  width 100%
  overflow hidden
  cursor pointer
  box-sizing border-box

.fitplan-planning-item-inside
  flex auto
  display flex
  flex-direction column
  justify-content space-around
  margin 3px 3px 1px 3px
  padding 5px
  border-radius 4px
  background #eee

.fitplan-planning-item-title
  margin 0
  text-align center

.fitplan-planning-item-hour
  margin 0
  text-align center
  font-size .9em

.fitplan-planning-item-bubble
  position absolute
  display none



.fitplan-planning-item-template
  display none // IE11 -
